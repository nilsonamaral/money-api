
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Categoria {
  categoria String @id
  icon      String
  Despesa   Despesas[]

  @@map("categorias")
}

model Despesas {
  id  Int @id @default(autoincrement())
  descricao String
  categoria String
  valor Decimal

  categoriaDetalhe Categoria @relation(fields: [categoria], references: [categoria])

  @@map("despesas")
}